<br/>
<h1>Create toy</h1>
<br/>

<%= form_with model: @toy, url:create_toy_path do |form| %>
    <% if @toy.errors.any?%>
        <div class="alert alert-danger">
            <% @toy.errors.full_messages.each do |message| %>
                <div>
                    <%=message %>
                </div>
            <%end%>
        </div>
    <%end%> 

    <form>
        <div class="mb-3">
            <%= form.label :img, style: "display: block", class:"form-label fw-semibold" %>
            <%= form.file_field :img, class:"form-control", placeholder:"Insert image"%>
        </div>
        
        <div class="mb-3">
            <%= form.label :name, style: "display: block", class:"form-label fw-semibold" %>
            <%= form.text_field :name, class:"form-control", placeholder:"Lego"%>
        </div>

        <div class="mb-3">
            <%= form.label :category, style: "display: block", class:"form-label fw-semibold" %>
            <%= form.text_field :category, class:"form-control", placeholder:"Dolls, Electronic toys, Action figures..."%>
        </div>

        <div class="mb-3">
            <%= form.label :description, style: "display: block", class:"form-label fw-semibold" %>
            <%= form.text_field :description, class:"form-control", placeholder:"Lorem ipsum dolor sit amet" %>
        </div>

        <%= form.hidden_field :user_id, value: Current.user.id %>

        <br/>
        <div class="d-flex flex-row">
            <%= form.submit class:"btn btn-secondary me-2"%>
            <%= link_to "Cancel", root_path, class:"btn btn-dark"%>
        </div>
    </form>
<% end %>