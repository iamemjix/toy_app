<div class="p-5 mb-4 bg-dark rounded-3 text-bg-dark">
  <div class="card m-3 center mx-auto" style= "width: 30rem;">
      <div id="carouselExample-<%= @toy.id %>" class="carousel slide">
        <div class="carousel-inner">
            
              <% @image.each_with_index do |image, index| %>
                  <% if index == 0 %>
                      <div class="carousel-item active">
                          <img src="<%= image.img %>" class="d-block w-100" alt="...">
                          <div class="carousel-caption d-none d-md-block">
                              <h5 class= "text-dark fs-6 fw-semibold lh-1 text-uppercase"><%= @toy.name %></h5>
                          </div>
                      </div>
                  <% else %>
                      <div class="carousel-item">
                          <img src="<%= image.img %>" class="d-block w-100" alt="...">
                      </div>
                  <% end %>
              <% end %>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample-<%= @toy.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample-<%= @toy.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
  </div>
  
  <h2> 
    <%= @toy.name %>
  </h2>

  <p class="lead"><em>
    Toy owner: <%= @user.email%> |
    <%= @toy.category%> <em>
  </p> 

  <hr class="my-4">
  <p class="text-break"> <em>
    <%= @toy.description%> </em>
  </p>
  <br/>

  <div>
    <%= link_to "Back", toy_list_path, class:"btn btn-outline-light"%>
    <%= link_to "Edit", update_toy_path(@toy), class:"btn btn-outline-secondary"%>  
  </div>

</div>