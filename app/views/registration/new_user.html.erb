<h1>Sign up</h1> <br/>

<%= form_with model: @user, url:sign_up_path do |form| %>


    <% if @user.errors.any?%>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div>
                    <%=message %>
                </div>
            <%end%>
        </div>
    <%end%> 

    <div class="mb-3">
        <%= form.label :email, style: "display: block", class:"form-label fw-semibold" %>
        <%=form.email_field :email, class:"form-control", placeholder:"john@doe.com"%>
    </div>

    <div class="mb-3">
        <%= form.label :password, style: "display: block", class:"form-label fw-semibold" %>
        <%=form.password_field :password, class:"form-control", placeholder:"Enter your password"%>
    </div>

    <div class="mb-3">
        <%= form.label :password_confirmation, style: "display: block", class:"form-label fw-semibold" %>
        <%=form.password_field :password_confirmation, class:"form-control", placeholder:"Confirm your password"%>
    </div>

    <div class="mb-3">
        <%=form.submit "Sign up", class:"btn btn-dark"%>
    </div>
<% end %>